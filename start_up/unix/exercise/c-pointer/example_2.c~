#include <stdio.h>

int main(int argc, char* argv[])
{
    int n;
    int begin = 1;
    int temp;
    int final;
    
    temp = begin;
    for(n = 10; n > 0; n--){
        temp = (temp + 1) * 2;
        if(n == 1){
            final = temp;
            printf("In the first day, the number is: %d\n", final);
        }   
    }
     
    return 0;
}

